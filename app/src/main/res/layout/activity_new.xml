<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewActivity">

    <ImageView
        android:alpha="0.8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/marri" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/marryMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <com.ics.ar.matri.view.CustomTextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Touched over"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:typeface="serif"
                android:visibility="visible" />

            <com.ics.ar.matri.view.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="3.5 million lives"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:typeface="serif"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="0.50"
            android:orientation="vertical">


            <com.ics.ar.matri.view.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="New to Arshmuslim.com?"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:typeface="serif"
                android:visibility="visible" />

            <Button
                android:id="@+id/btSignup"
                android:elevation="4dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/btnbg"
                android:text="Sign up Free"
                android:textAllCaps="false"
                android:textColor="#fff" />

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <com.ics.ar.matri.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    android:text="Already have an account?"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:typeface="serif"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btLogin"
                    android:text="Login"
                    android:textColor="#fff"
                    android:textAllCaps="false"
                    android:background="@drawable/newbg"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/RRsncbar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="40dp"></RelativeLayout>

</RelativeLayout>